<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
       >

        <ImageView
            android:id="@+id/mImgFloat"
            android:layout_width="151dp"
            android:layout_height="81dp"
            android:layout_centerInParent="true"
            android:src="@drawable/fudong" />


        <ImageView
            android:id="@+id/mImgClosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImgFloat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:src="@drawable/quxiao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImgClosed"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="松开发送"
            android:textColor="#ffcccccc"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/shape_semicircle_ffbbbbbb" />

    </RelativeLayout>
</RelativeLayout>
