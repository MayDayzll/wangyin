<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/shape_white_12"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="给我们留言"
            android:textColor="#ffee443f"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="21dp"
            android:background="@drawable/shape_line_r4_dddddd"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/phone" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="#DDDDDD"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号码"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_line_r4_dddddd"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/uesr" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="#DDDDDD"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入姓名"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wechat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Name"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_line_r4_dddddd"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/wechat" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="#DDDDDD"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入微信号"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/wechat"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_line_r4_dddddd">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/text" />

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="12dp"
                android:background="#DDDDDD"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@null"
                android:hint="请输入留言内容"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/shape_red_20"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="确定" />

    </RelativeLayout>
</RelativeLayout>
